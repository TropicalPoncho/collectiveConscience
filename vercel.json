{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/neurons(.*)", "destination": "/api/index.js" },
    { "source": "/network(.*)", "destination": "/api/index.js" },
    { "source": "/synapses(.*)", "destination": "/api/index.js" },
    { "source": "/soma(.*)", "destination": "/api/index.js" },
    { "source": "/users(.*)", "destination": "/api/index.js" },
    { "source": "/submit-form(.*)", "destination": "/api/index.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}